{
  "manifest_version": 2,

  "name": "__MSG_appName__",
  "short_name": "QR-Gen",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "2.0",
  "icons": { 
	"128": "icon_128.png",
	"64": "icon_64.png",
	"48": "icon_48.png",
	"32": "icon_32.png",
	"16": "icon_16.png" 
  },
  "options_page": "history.html",
  "permissions": [
    "http://chart.apis.google.com/*",
	"contextMenus",
	"tabs",
	"notifications",
	"storage"
  ],
  "browser_action": {
    "default_icon": "icon_256.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}